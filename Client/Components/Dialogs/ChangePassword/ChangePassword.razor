@namespace FileFlows.Client.Components.Dialogs

<Modal Title="@lblTitle" Visible="Visible">
    <Body>
        <form>
            <div class="cp-input">
                <label>
                    <span>@lblOldPassword</span>
                    <input type="password" id="@txtOldPasswordUid" @bind-value="@oldPassword" disabled="@saving" @bind-value:event="oninput" @onkeydown="OnKeyDown" />
                </label>
            </div>
            <div class="cp-input">
                <label>
                    <span>@lblNewPassword</span>
                    <input type="password" @bind-value="@newPassword" disabled="@saving" @bind-value:event="oninput" @onkeydown="OnKeyDown"/>
                </label>
            </div>
            <div class="cp-input">
                <label>
                    <span>@lblNewPasswordConfirm</span>
                    <input type="password" @bind-value="@newPasswordConfirm" disabled="@saving" @bind-value:event="oninput" @onkeydown="OnKeyDown"/>
                </label>
            </div>
        </form>
    </Body>
    <Footer>
        <button @onclick=@Save disabled="@saving">@lblSave</button>
        <button @onclick=@Cancel disabled="@saving">@lblCancel</button>
    </Footer>
</Modal>